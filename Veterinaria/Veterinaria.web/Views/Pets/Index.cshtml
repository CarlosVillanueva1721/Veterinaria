@model IEnumerable<Veterinaria.web.Models.Pet>

@{
    ViewBag.Title = "Index";
}



<p style="margin-top: 100px">
    <a href="@Url.Action("Create","pets")" class="btn btn-success btn-sm">
        <span class="icon text-white-50"> <i></i> </span>
        <span class="text">Nueva Mascota</span>
    </a>
</p>
<table class="table table-sm" id="myProducts">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Race)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Race)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        <a> <img style="width:100%; height:170px;" src="@Url.Action("getimagen", "pets", new{ id=item.Id})" alt="aqui debe ir una imagen chida"></a>
                    </td>

                    <td>
                        <a href="@Url.Action("Edit", "Pets", new { id = item.Id })" class="btn btn-warning btn-circle"> <i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Details", "Pets", new { id = item.Id })" class="btn btn-info btn-circle"> <i class="fas fa-info-circle"></i></a>
                        <a href="@Url.Action("Delete", "Pets", new { id = item.Id })" class="btn btn-danger btn-circle"> <i class="fas fa-trash"></i></a>
</tr>
            }
        </tbody>
    </table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
$(document).ready(function () {
            $('#myProducts').DataTable();
        });</script>
}
